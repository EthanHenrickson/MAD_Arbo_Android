<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">

    <TableLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TableRow android:layout_marginTop="20dp">

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="TreeID:"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/treeId"
                android:gravity="right"
                android:padding="3dip"
                android:text="blank"
                android:textSize="20sp" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp">

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Tree Type:"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/type"
                android:gravity="right"
                android:padding="3dip"
                android:text="blank"
                android:textSize="20sp" />
        </TableRow>
        <TableRow android:layout_marginTop="20dp">

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Tree Lat:"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/lat"
                android:layout_width="290dp"
                android:gravity="right"
                android:padding="3dip"
                android:text="blank"
                android:textSize="20sp" />
        </TableRow>
        <TableRow android:layout_marginTop="20dp">

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Tree Long:"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/lng"
                android:gravity="right"
                android:padding="3dip"
                android:text="blank"
                android:textSize="20sp" />
        </TableRow>
        <TableRow android:layout_marginTop="20dp">

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Tree Desc:"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/desc"
                android:gravity="right"
                android:padding="3dip"
                android:text="blank"
                android:textSize="20sp" />
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_gravity="center" android:layout_marginTop="20dp">

            <Button
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Delete Tree"
                android:layout_span="3"
                android:background="#950303">
            </Button>
        </TableRow>



    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>